<h1>Find a Local Provider</h1>
<div>
  <p class="lead">
    {{recommendation.text}}
  </p>
</div>
<p class="table-heading">Below are local providers that can help with this recommendation.</p>
<table class="table table-hover providers-table">
  <thead>
    <tr>
      <th class="company-column">Company</th>
      <th class="website-column">Website</th>
      <th class="phone-number-column">Phone Number</th>
    </tr>
  </thead>
  <tbody>
    {{#each providers}}
    <tr>
      <td>{{this.company}}</td>
      <td>
        <a href="http://{{this.website}}" target="_blank">{{this.website}}</a>
      </td>
      <td>
        {{this.number}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
