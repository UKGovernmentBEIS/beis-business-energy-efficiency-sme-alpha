<div class="page results-page">
    <div class="page-header">
        <h1 class="page-title">Energy Recommendations</h1>
    </div>
    <div class="page-content">
        <div class="row address-row">
            <div class="subheading">
                {{property.address}}
            </div>
            <div class="rating {{property.color}}">
                {{property.asset-rating-band}}
            </div>
        </div>
        <table class="table table-hover recommendations-table">
            <tr>
                <th>Payback type</th>
                <th>CO2 Impact</th>
                <th>Recommendation</th>
            </tr>
            {{#each recommendations}}
            <tr>
                <td class="recommendation {{paybackTypeColor}}">
                    {{PAYBACK_TYPE}}
                </td>
                <td class="recommendation {{co2ImpactColor}}">
                    {{CO2_IMPACT}}
                </td>
                <td>
                    {{RECOMMENDATION}}
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>
</div>
