<h1>Energy Advice Service</h1>
<h4>Enter your postcode below to receive your energy recommendations</h4>
<form action="/search">
  <div class="form-group">
    <label for="postcode">Postcode</label>
    <input type="hidden" name="size" value="{{size}}">
    <input type="hidden" name="tenure" value="{{tenure}}">
    <input class="search-input form-control" type="text" name="postcode" value="{{postcode}}">
  </div>
  <button class="btn btn-primary" type="submit">Search</button>
</form>
{{#if postcode}}
  <h4>Properties</h4>
  <div class="results">
    {{#each results}}
      <a href="/rating2/{{certificateHash}}?size={{../size}}&tenure={{../tenure}}" class="btn btn-secondary search-result">{{address}}</a>
    {{else}}
      <p>There are no non-domestic properties associated with this postcode.</p>
    {{/each}}
  </div>
{{/if}}
